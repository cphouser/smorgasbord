{
    //mandatory fields
    "manifest_version": 2,
    "name": "smorgasbord",
    "version": "0.1",

    "description": "File representation for Firefox windows and bookmarks",

    "permissions": [
        "webRequest",
        "<all_urls>",
        "tabs",
        "nativeMessaging",
        "browser_action",
        "storage"
    ],

    "browser_action": {
        "default_icon": {
            "16": "icons/browseraction.png"
        },
        "default_title": "Sync Pages",
        "default_popup": "html/browseraction.html"
    },

    "background": {
        "scripts": ["tabstore.js"]
    },

    "applications": {
        "gecko": {
            "id": "smorgasbord@xeroxcat"
        }
    }
}
